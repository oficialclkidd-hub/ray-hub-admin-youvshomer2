local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Ray hub | you vs homer v2 | by ray studios",
   LoadingTitle = "Ray Studios ðŸ”´",
   LoadingSubtitle = "by Ray Studios",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "RayHubData",
      FileName = "RayHubConfig"
   },
   Discord = {
      Invite = "7fRhUnr9M2", 
      RememberJoins = true
   },
   KeySystem = false,
})

-- Visual: Tema Preto e Vermelho (Sem azul)
Rayfield.Flags["Theme"] = {
    ["TextColor"] = Color3.fromRGB(255, 255, 255),
    ["Background"] = Color3.fromRGB(0, 0, 0), 
    ["AccentColor"] = Color3.fromRGB(255, 0, 0),
}

-- TABS
local MainTab = Window:CreateTab("ðŸ  Principal", nil)
local SpeedTab = Window:CreateTab("âš¡ Velocidade", nil)
local FakeTab = Window:CreateTab("ðŸŒ€ Fake", nil)
local ESPTab = Window:CreateTab("ðŸ‘ï¸ ESP", nil)
local DiscordTab = Window:CreateTab("ðŸ“± Discord", nil)

--- SEÃ‡ÃƒO PRINCIPAL ---

MainTab:CreateToggle({
   Name = "ðŸ§± Wall Hop (Plataforma)",
   CurrentValue = false,
   Callback = function(Value)
      _G.WallHop = Value
      game:GetService("UserInputService").JumpRequest:Connect(function()
          if _G.WallHop then
              local char = game.Players.LocalPlayer.Character
              local hrp = char:FindFirstChild("HumanoidRootPart")
              if hrp then
                  local plate = Instance.new("Part")
                  plate.Size = Vector3.new(8, 1, 8)
                  plate.Transparency = 1 
                  plate.Anchored = true
                  plate.CanCollide = true
                  plate.Parent = workspace
                  plate.CFrame = hrp.CFrame * CFrame.new(0, -3.7, 0)
                  game.Debris:AddItem(plate, 0.1)
              end
          end
      end)
   end,
})

MainTab:CreateToggle({
   Name = "ðŸš€ FPS Booster",
   CurrentValue = false,
   Callback = function(Value)
      game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value and 26 or 16
   end,
})

MainTab:CreateToggle({
   Name = "â˜ï¸ Infinite Jump",
   CurrentValue = false,
   Callback = function(Value)
      _G.InfJump = Value
      game:GetService("UserInputService").JumpRequest:Connect(function()
          if _G.InfJump then
              game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
          end
      end)
   end,
})

MainTab:CreateToggle({
   Name = "ðŸ›¡ï¸ God Mode",
   CurrentValue = false,
   Callback = function(Value)
      if Value then
          local hum = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
          hum.MaxHealth = math.huge
          hum.Health = math.huge
      else
          Rayfield:Notify({Title = "Aviso", Content = "DÃª reset para desativar!", Duration = 3})
      end
   end,
})

MainTab:CreateToggle({
   Name = "ðŸ‘¤ InvisÃ­vel",
   CurrentValue = false,
   Callback = function(Value)
      local char = game.Players.LocalPlayer.Character
      for _, part in pairs(char:GetDescendants()) do
          if part:IsA("BasePart") or part:IsA("Decal") then
              part.Transparency = Value and 1 or 0
          end
      end
   end,
})

--- SEÃ‡ÃƒO VELOCIDADE ---

SpeedTab:CreateToggle({
   Name = "ðŸƒ Speed 1.3x",
   CurrentValue = false,
   Callback = function(Value)
      game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value and 21 or 16
   end,
})

SpeedTab:CreateInput({
   Name = "âœï¸ Velocidade Custom (AtÃ© 1000)",
   PlaceholderText = "Velocidade...",
   RemoveTextAfterFocusLost = false,
   Callback = function(Text)
      local val = tonumber(Text)
      if val then
          if val > 1000 then val = 1000 end
          game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = val
      end
   end,
})

--- SEÃ‡ÃƒO FAKE (RITUAL) ---

FakeTab:CreateButton({
   Name = "ðŸ”® Fake Ritual",
   Callback = function()
      local char = game.Players.LocalPlayer.Character
      local hrp = char:FindFirstChild("HumanoidRootPart")
      
      if hrp then
          local plate = Instance.new("Part", workspace)
          plate.Size = Vector3.new(10, 1, 10)
          plate.Anchored = false 
          plate.CanCollide = true
          plate.CFrame = hrp.CFrame * CFrame.new(0, -3.5, 0)
          plate.Color = Color3.fromRGB(255, 0, 0)
          
          local weld = Instance.new("WeldConstraint", plate)
          weld.Part0 = plate
          weld.Part1 = hrp

          local bv = Instance.new("BodyVelocity", hrp)
          bv.Velocity = Vector3.new(0, 70, 0) 
          bv.MaxForce = Vector3.new(0, math.huge, 0)
          
          local bav = Instance.new("BodyAngularVelocity", hrp)
          bav.AngularVelocity = Vector3.new(0, 50, 0) 
          bav.MaxTorque = Vector3.new(0, math.huge, 0)
          
          task.wait(2)
          bv:Destroy() 
          plate:Destroy()
          
          task.wait(1)
          bav:Destroy() 
          
          Rayfield:Notify({Title = "Fake Ritual", Content = "Finalizado! ðŸŒ€", Duration = 3})
      end
   end,
})

--- SEÃ‡ÃƒO ESP ---

ESPTab:CreateToggle({
   Name = "ðŸ”´ ESP All",
   CurrentValue = false,
   Callback = function(Value)
      _G.ESPAll = Value
      while _G.ESPAll do
          for _, v in pairs(game.Players:GetPlayers()) do
              if v ~= game.Players.LocalPlayer and v.Character and not v.Character:FindFirstChild("Highlight") then
                  local hi = Instance.new("Highlight", v.Character)
                  hi.FillColor = Color3.fromRGB(255, 0, 0)
                  hi.OutlineColor = Color3.fromRGB(255, 255, 255)
              end
          end
          task.wait(1)
          if not _G.ESPAll then
              for _, v in pairs(game.Players:GetPlayers()) do
                  if v.Character and v.Character:FindFirstChild("Highlight") then
                      v.Character.Highlight:Destroy()
                  end
              end
          end
      end
   end,
})

